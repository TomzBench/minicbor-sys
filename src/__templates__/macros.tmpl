{%- macro impl_enc_val(meth, ty) -%}
    #[no_mangle]
    pub extern "C" fn mcbor_enc_{{meth}}(dst: *mut u8, dstlen: u32, val: {{ty}}) -> i32 {
        let dstslice = unsafe { core::slice::from_raw_parts_mut(dst, dstlen as usize) };
