{%- import "macros.tmpl" as macros -%}
{{ macros::prelude(options=options) }}
{%- set structs = cddl | nodes(value="struct") -%}
{%- set literals = cddl | nodes(value="literal") -%}
{%- set cbor_key = "CborKey" | rename(case="enum", options=options) -%}

